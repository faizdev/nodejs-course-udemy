extends ../layouts/main-layout.pug

block page-styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block page-content
    main
        form.product-form(action="/admin/edit-product", method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", id="title", value=product.title)
            .form-control
                label(for="imageUrl") Image URL
                input(type="text", name="imageUrl", id="imageUrl", value=product.imageUrl)
            .form-control
                label(for="price") Price
                input(type="text", name="price", id="price", value=product.price)
            .form-control
                label(for="description") Description
                textarea(type="text", name="description", id="description", rows="5") #{product.description}
            if product
                input(type="hidden", name="productId", id="productId", value=product._id)
            button(type="submit") Update Product